@model DekkersAuto.Web.Models.Inventory.FilterViewModel

<div class="card">
    <div class="card-header">
        <a data-toggle="collapse" href="#filterBody" role="button" aria-expanded="false" aria-controls="filterBody">Filter</a>
    </div>
    <div class="collapse" id="filterBody">
        <div class="card-body">
            <form asp-action="Filter" asp-controller="Inventory" data-ajax="true" data-ajax-method="POST" data-ajax-update="#inventoryList" data-ajax-mode="replace">
                <div class="row">

                    <div class="col-lg-6">
                        <div class="form-group form-inline">
                            <label asp-for="Make" class="control-label col-2"></label>
                            <select asp-for="Make" asp-items="Model.MakeList" class="form-control col-4"></select>
                        </div>
                        <div class="form-group form-inline">
                            <label asp-for="Model" class="control-label col-2"></label>
                            <select asp-for="Model" asp-items="Model.ModelList" class="form-control col-4"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-6">@Locale.Kilometers</label>
                            <br />
                            <div class="form-inline">
                                <label asp-for="KilometersFrom" class="control-label col-2"></label>
                                <input asp-for="KilometersFrom" class="form-control col-2" />
                            </div>
                            <br />
                            <div class="form-inline">
                                <label asp-for="KilometersTo" class="control-label col-2"></label>
                                <input asp-for="KilometersTo" class="form-control col-2" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group form-inline">
                            <label asp-for="Colour" class="control-label col-2"></label>
                            <select asp-for="Colour" asp-items="Model.ColourList" class="form-control col-4"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-6">@Locale.Year</label>
                            <br />
                            <div class="form-inline">
                                <label asp-for="YearFrom" class="control-label col-2"></label>
                                <input asp-for="YearFrom" class="form-control col-2" />
                            </div>
                            <br />
                            <div class="form-inline">
                                <label asp-for="YearTo" class="control-label col-2"></label>
                                <input asp-for="YearTo" class="form-control col-2" />
                            </div>
                        </div>
                    </div>
                </div>
                <input type="submit" value="Filter" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>