@model DekkersAuto.Web.Models.Inventory.DetailViewModel
@using DekkersAuto.Web.Models.Home

<div class="card">
    <h5 class="card-header">@Model.Title</h5>
    <div class="card-body">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
            <ol class="carousel-indicators">
                @for (var i = 0; i < Model.ImageStrings.Count; i++)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="i" @(i == 0 ? "class='active'" : "")></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (var i = 0; i < Model.ImageStrings.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img class="d-block w-100" src="@Model.ImageStrings[i]">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<br />
<div class="card">
    <h5 class="card-header">Details</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <textarea class="form-control" readonly>@Model.Description</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Make" class="control-label"></label>
                    <input asp-for="Make" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Kilometers" class="control-label"></label>
                    <input asp-for="Kilometers" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="BodyType" class="control-label"></label>
                    <input asp-for="BodyType" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Transmission" class="control-label"></label>
                    <input asp-for="Transmission" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="DriveTrain" class="control-label"></label>
                    <input asp-for="DriveTrain" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Colour" class="control-label"></label>
                    <input asp-for="Colour" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="FuelType" class="control-label"></label>
                    <input asp-for="FuelType" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Doors" class="control-label"></label>
                    <input asp-for="Doors" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Seats" class="control-label"></label>
                    <input asp-for="Seats" class="form-control" readonly />
                </div>
            </div>

        </div>
    </div>
</div>
<br />
@if (Model.Options != null && Model.Options.Count > 0)
{

    <div class="card">
        <h5 class="card-header">Options</h5>
        <div class="card-body">
            @foreach (var option in Model.Options)
            {
                <span class="btn btn-info">@option</span>
            }
        </div>
    </div>

}
<br />
<partial name="_ContactForm" model="new ContactViewModel()" />

